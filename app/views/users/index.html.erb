<div class='container'>
  <div class='row'>

    <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
     </div>
　　<% end %>


    <div class='col-xs-3'>
      <h2>User info</h2>
      <table class='table table-striped'>
        <tr><%= attachment_image_tag @user, :profile_image,size: '100x100', fallback: "no_image.jpg" %></tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

    <div class='row'>
      <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit" %>
    </div>

      <h2>New book</h2>
      <%= form_for(@book) do |f| %>

        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のエラーが発生しました
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Body</h4>
        <%= f.text_area :body %>

        <%= f.submit %>
      <% end %>
    </div>







    <div class='col-xs-9'>
      <h2>Users</h2>

      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
      	    <th></th>
    	    </tr>
  	    </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image,size: '100x100', fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
