<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :opinion %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", book_path(@book.id) %><p>|</p><%= link_to "Back", books_path %>